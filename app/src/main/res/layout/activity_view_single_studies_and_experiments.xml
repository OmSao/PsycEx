<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/diffBackgroundWhite"
        tools:context=".StudiesAndExperiments.ViewSingleStudiesAndExperiments">

        <TextView
            android:id="@+id/titleStudiesAndExperimentsViewer"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Title of Studies and Experiments"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
             />
        <LinearLayout
            android:id="@+id/linearLayoutImageStudiesAndExperimentsViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageStudiesAndExperimentsViewer"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@color/colorPrimary" />
            <TextView
                android:id="@+id/conductedByStudiesAndExperimentsViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Study Conducted by"
                android:gravity="left"
                android:layout_below="@id/linearLayoutImageStudiesAndExperimentsViewer"
                />
            <TextView
                android:id="@+id/dateAndPlaceStudiesAndExperimentsViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Date and Place"
                android:gravity="left"
                android:layout_below="@id/conductedByStudiesAndExperimentsViewer"
                />
            <TextView
                android:id="@+id/topicStudiesAndExperimentsViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Topic"
                android:gravity="left"
                android:layout_below="@id/dateAndPlaceStudiesAndExperimentsViewer"
                />
            <TextView
                android:id="@+id/detailsStudiesAndExperimentsViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:text="Experimental Details"
                android:gravity="left"
                android:lineSpacingExtra="7dp"
                android:layout_below="@id/topicStudiesAndExperimentsViewer"
                />

        </LinearLayout>



        <!--<ImageView
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titleStudiesAndExperimentsViewer"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@color/colorPrimary" />-->
    </RelativeLayout>
</ScrollView>