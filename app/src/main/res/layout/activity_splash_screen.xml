<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diffBackgroundWhite"
    tools:context=".SplashScreen">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashScreenWelcomeLogo"
            android:layout_width="wrap_content"
            android:layout_height="395dp"
            android:layout_gravity="center"
            android:src="@drawable/splashscreengif_alphachannel_completed" />

        <TextView
            android:id="@+id/splashScreenWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Psychology Explorer"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/splashScreenDescriptoinMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="One stop destination for Psychology Students."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"

            />

    </LinearLayout>

</RelativeLayout>